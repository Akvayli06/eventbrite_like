<h1> Créer un evenement</h1>

<%= form_for @event do |f| %>
<div class="form-group">
<label> Nom du potin </label> 
   <%= f.text_field :title, class: 'form-control' %>
   
   </div>
   <div class="form-group">
   <label> start_date </label> 
   <input type="time" name="wakeup">
   <%= f.text_area :start_date, class: 'form-control' %>
   </div>
   <div class="form-group">
   <label> description </label> 
   <%= f.text_area :description, class: 'form-control' %>
   </div>
   <div class="form-group">
   <label> duration </label> 
   <%= f.text_area :duration, class: 'form-control' %>
   </div>
   <div class="form-group">
   <label> location </label> 
   <%= f.text_area :location, class: 'form-control' %>
   </div>
   <div class="form-group">
   <label> price </label> 
   <%= f.text_area :price, class: 'form-control' %>
   </div>
   <div class="form-group">
   <button type="submit">Créer l'article</button>
   </div>
<% end %>

